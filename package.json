{
  "name": "aetherflow",
  "version": "1.0.0",
  "description": "AetherFlow Healthcare Application",
  "main": "electron-main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "express": "^4.18.2"
  },
  "build": {
    "appId": "com.aetherflow.healthcare",
    "productName": "AetherFlow",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules",
      "!src",
      "!.git",
      "!README.md",
      "!.gitignore"
    ],
    "extraResources": [
      {
        "from": "temp_resources/",
        "to": "resources/"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
