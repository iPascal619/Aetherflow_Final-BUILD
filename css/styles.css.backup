/* ===== HEALTHCARE PROVIDER MODE STYLES ===== */

/* Patients Page Styles */
.patients-page {
    max-width: 1400px;
    margin: 0 auto;
    padding: 20px;
}

.patients-controls {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    margin-bottom: 30px;
    align-items: center;
}

.search-bar {
    display: flex;
    gap: 10px;
    flex: 1;
    min-width: 300px;
}

.filter-controls {
    display: flex;
    gap: 15px;
}

.patients-container {
    background: var(--bg-card);
    border-radius: 12px;
    padding: 25px;
    box-shadow: 0 2px 10px var(--shadow);
}

.patients-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 25px;
    padding-bottom: 15px;
    border-bottom: 1px solid var(--border-color);
}

.view-toggle {
    display: flex;
    gap: 10px;
}

.view-toggle .btn {
    padding: 8px 16px;
    border-radius: 6px;
}

.view-toggle .btn.active {
    background: var(--accent-color);
    color: white;
    border-color: var(--accent-color);
}

.patients-count {
    font-weight: 600;
    color: var(--text-secondary);
}

/* Grid View */
.patients-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 20px;
}

.patient-card {
    background: var(--bg-card);
    border: 1px solid var(--border-color);
    border-radius: 12px;
    padding: 20px;
    cursor: pointer;
    transition: all 0.3s ease;
    position: relative;
}

.patient-card:hover {
    box-shadow: 0 4px 15px var(--shadow-hover);
    transform: translateY(-2px);
}

.patient-card-header {
    display: flex;
    align-items: center;
    gap: 15px;
    margin-bottom: 15px;
    position: relative;
}

.patient-avatar {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    background: var(--primary-gradient);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: bold;
    font-size: 18px;
}

.patient-avatar-sm {
    width: 35px;
    height: 35px;
    font-size: 14px;
}

.patient-avatar-xs {
    width: 28px;
    height: 28px;
    font-size: 12px;
}

.patient-avatar-large {
    width: 80px;
    height: 80px;
    font-size: 28px;
}

.patient-basic-info {
    flex: 1;
}

.patient-name {
    font-size: 18px;
    font-weight: 600;
    margin-bottom: 5px;
    color: var(--text-primary);
}

.patient-id {
    color: var(--text-secondary);
    font-size: 14px;
}

.patient-actions-btn {
    position: absolute;
    top: 0;
    right: 0;
    width: 30px;
    height: 30px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    border-radius: 50%;
    transition: background-color 0.3s ease;
    font-size: 20px;
    color: var(--text-secondary);
}

.patient-actions-btn:hover {
    background: var(--border-color);
}

.patient-card-body {
    margin-bottom: 20px;
}

.patient-info-row {
    display: flex;
    justify-content: space-between;
    margin-bottom: 10px;
    padding: 8px 0;
    border-bottom: 1px solid var(--border-color);
}

.patient-info-row:last-child {
    border-bottom: none;
    margin-bottom: 0;
}

.info-label {
    font-weight: 500;
    color: var(--text-secondary);
}

.info-value {
    color: var(--text-primary);
    font-weight: 500;
}

.patient-card-footer {
    display: flex;
    gap: 10px;
}

.btn-sm {
    padding: 6px 12px;
    font-size: 14px;
}

/* List View */
.patients-list {
    overflow-x: auto;
}

.patients-table {
    width: 100%;
    border-collapse: collapse;
    background: var(--bg-card);
}

.patients-table th,
.patients-table td {
    padding: 15px;
    text-align: left;
    border-bottom: 1px solid var(--border-color);
}

.patients-table th {
    background: var(--bg-primary);
    font-weight: 600;
    color: var(--text-secondary);
    position: sticky;
    top: 0;
}

.patients-table tr {
    cursor: pointer;
    transition: background-color 0.3s ease;
}

.patients-table tr:hover {
    background: var(--bg-primary);
}

.patient-name-cell {
    display: flex;
    align-items: center;
    gap: 12px;
}

/* Risk Badges */
.risk-badge {
    padding: 4px 12px;
    border-radius: 20px;
    font-size: 12px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.risk-badge.risk-high {
    background: #fee;
    color: #dc3545;
    border: 1px solid #f5c6cb;
}

.risk-badge.risk-moderate {
    background: #fff3cd;
    color: #856404;
    border: 1px solid #ffeaa7;
}

.risk-badge.risk-low {
    background: #d4edda;
    color: #155724;
    border: 1px solid #c3e6cb;
}

.risk-badge.risk-unknown {
    background: #e2e3e5;
    color: #6c757d;
    border: 1px solid #d6d8db;
}

/* Status Badges */
.status-badge {
    padding: 4px 12px;
    border-radius: 20px;
    font-size: 12px;
    font-weight: 600;
    text-transform: uppercase;
}

.status-badge.active {
    background: #d4edda;
    color: #155724;
}

.status-badge.inactive {
    background: #e2e3e5;
    color: #6c757d;
}

/* No Data States */
.no-data-state {
    text-align: center;
    padding: 60px 20px;
    color: var(--text-secondary);
}

.no-data-icon {
    font-size: 48px;
    margin-bottom: 20px;
    opacity: 0.5;
}

/* Modals */
.modal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.7);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1000;
}

.modal-content {
    background: var(--bg-card);
    border-radius: 12px;
    padding: 0;
    max-width: 600px;
    width: 90%;
    max-height: 90vh;
    overflow-y: auto;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
}

.modal-content.large-modal {
    max-width: 900px;
}

.modal-header {
    padding: 20px 25px;
    border-bottom: 1px solid var(--border-color);
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.modal-header h3 {
    margin: 0;
    color: var(--text-primary);
}

.modal-close {
    background: none;
    border: none;
    font-size: 24px;
    cursor: pointer;
    color: var(--text-secondary);
    padding: 5px;
    border-radius: 50%;
    width: 35px;
    height: 35px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.modal-close:hover {
    background: var(--border-color);
}

.modal-body {
    padding: 25px;
}

.modal-footer {
    padding: 20px 25px;
    border-top: 1px solid var(--border-color);
    display: flex;
    gap: 15px;
    justify-content: flex-end;
}

.patient-actions {
    display: flex;
    flex-direction: column;
    gap: 15px;
}

.modal-actions {
    display: flex;
    gap: 15px;
    justify-content: flex-end;
    margin-top: 20px;
}

/* Assessments Page Styles */
.assessments-page {
    max-width: 1400px;
    margin: 0 auto;
    padding: 20px;
}

.patient-filter-section {
    background: var(--bg-card);
    border-radius: 12px;
    padding: 20px;
    margin-bottom: 25px;
    box-shadow: 0 2px 10px var(--shadow);
}

.filter-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 15px;
}

.selected-patient-info {
    margin-top: 15px;
}

.selected-patient-card {
    display: flex;
    align-items: center;
    gap: 15px;
    padding: 15px;
    background: var(--bg-primary);
    border-radius: 8px;
    border: 1px solid var(--border-color);
}

.assessments-controls {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    margin-bottom: 30px;
    align-items: center;
}

.assessment-stats {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 20px;
    margin-bottom: 30px;
}

.stat-card {
    background: var(--bg-card);
    border-radius: 12px;
    padding: 20px;
    display: flex;
    align-items: center;
    gap: 15px;
    box-shadow: 0 2px 10px var(--shadow);
}

.stat-card.high-risk {
    background: linear-gradient(135deg, #fee 0%, #fdd 100%);
    border-left: 4px solid #dc3545;
}

.stat-card.moderate-risk {
    background: linear-gradient(135deg, #fff3cd 0%, #ffeaa7 100%);
    border-left: 4px solid #ffc107;
}

.stat-card.low-risk {
    background: linear-gradient(135deg, #d4edda 0%, #c3e6cb 100%);
    border-left: 4px solid #28a745;
}

.stat-icon {
    font-size: 24px;
    opacity: 0.8;
}

.stat-content h3 {
    font-size: 28px;
    font-weight: 700;
    margin-bottom: 5px;
    color: var(--text-primary);
}

.stat-content p {
    color: var(--text-secondary);
    font-size: 14px;
    margin: 0;
}

.assessments-container {
    background: var(--bg-card);
    border-radius: 12px;
    padding: 25px;
    box-shadow: 0 2px 10px var(--shadow);
}

.assessments-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 25px;
    padding-bottom: 15px;
    border-bottom: 1px solid var(--border-color);
}

.assessments-table-container {
    overflow-x: auto;
}

.assessments-table {
    width: 100%;
    border-collapse: collapse;
}

.assessments-table th,
.assessments-table td {
    padding: 15px;
    text-align: left;
    border-bottom: 1px solid var(--border-color);
}

.assessments-table th {
    background: var(--bg-primary);
    font-weight: 600;
    color: var(--text-secondary);
    position: sticky;
    top: 0;
}

.assessments-table tr {
    cursor: pointer;
    transition: background-color 0.3s ease;
}

.assessments-table tr:hover {
    background: var(--bg-primary);
}

.date-time-cell {
    min-width: 120px;
}

.date-time-cell strong {
    display: block;
    color: var(--text-primary);
}

.date-time-cell small {
    color: var(--text-secondary);
}

.symptoms-cell,
.recommendations-cell {
    max-width: 200px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.risk-score {
    font-weight: 600;
    font-size: 16px;
}

/* Assessment Details Modal */
.assessment-details {
    max-width: 100%;
}

.assessment-header {
    margin-bottom: 25px;
    padding-bottom: 15px;
    border-bottom: 1px solid var(--border-color);
}

.assessment-header h4 {
    font-size: 20px;
    margin-bottom: 10px;
    color: var(--text-primary);
}

.assessment-sections {
    display: flex;
    flex-direction: column;
    gap: 25px;
}

.assessment-section h5 {
    color: var(--accent-color);
    margin-bottom: 15px;
    font-size: 16px;
    font-weight: 600;
}

.symptoms-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 15px;
}

.symptom-item {
    display: flex;
    justify-content: space-between;
    padding: 10px;
    background: var(--bg-primary);
    border-radius: 6px;
}

.recommendations-list p {
    margin-bottom: 10px;
    padding: 10px;
    background: var(--bg-primary);
    border-radius: 6px;
    border-left: 3px solid var(--accent-color);
}

/* Reports Page Styles */
.reports-page {
    max-width: 1400px;
    margin: 0 auto;
    padding: 20px;
}

.report-controls {
    background: var(--bg-card);
    border-radius: 12px;
    padding: 25px;
    margin-bottom: 30px;
    box-shadow: 0 2px 10px var(--shadow);
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 20px;
    align-items: end;
}

.control-group {
    display: flex;
    flex-direction: column;
    gap: 8px;
}

.control-group label {
    font-weight: 600;
    color: var(--text-secondary);
    font-size: 14px;
}

.control-actions {
    display: flex;
    gap: 15px;
}

.analytics-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 20px;
    margin-bottom: 30px;
}

.analytics-card {
    background: var(--bg-card);
    border-radius: 12px;
    box-shadow: 0 2px 10px var(--shadow);
    overflow: hidden;
}

.analytics-card.risk-distribution {
    background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
}

.analytics-card.trending {
    background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);
}

.analytics-card.alerts {
    background: linear-gradient(135deg, #fff3e0 0%, #ffcc80 100%);
}

.card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20px;
    background: var(--bg-primary);
    border-bottom: 1px solid var(--border-color);
}

.card-header h3 {
    margin: 0;
    font-size: 18px;
    color: var(--text-primary);
}

.card-icon {
    font-size: 24px;
    opacity: 0.7;
}

.card-content {
    padding: 20px;
}

.metric {
    display: flex;
    flex-direction: column;
    gap: 5px;
    margin-bottom: 15px;
}

.metric:last-child {
    margin-bottom: 0;
}

.metric-value {
    font-size: 24px;
    font-weight: 700;
    color: var(--text-primary);
}

.metric-label {
    font-size: 14px;
    color: var(--text-secondary);
}

/* Chart Styles */
.risk-chart,
.trend-chart {
    height: 200px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.risk-bars {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 15px;
}

.risk-bar {
    display: flex;
    align-items: center;
    gap: 15px;
}

.bar-label {
    min-width: 80px;
    font-size: 12px;
    font-weight: 600;
    color: var(--text-secondary);
}

.bar-container {
    flex: 1;
    height: 20px;
    background: var(--border-color);
    border-radius: 10px;
    overflow: hidden;
}

.bar {
    height: 100%;
    border-radius: 10px;
    transition: width 0.5s ease;
}

.bar.bar-high {
    background: linear-gradient(90deg, #dc3545, #ff6b7a);
}

.bar.bar-moderate {
    background: linear-gradient(90deg, #ffc107, #ffcd39);
}

.bar.bar-low {
    background: linear-gradient(90deg, #28a745, #5cbf2a);
}

.bar-value {
    min-width: 30px;
    text-align: center;
    font-weight: 600;
    font-size: 14px;
    color: var(--text-primary);
}

.trend-line {
    display: flex;
    align-items: end;
    gap: 15px;
    height: 150px;
    padding: 0 20px;
}

.trend-point {
    width: 20px;
    background: var(--accent-color);
    border-radius: 10px 10px 0 0;
    position: relative;
    transition: height 0.5s ease;
}

.point-value {
    position: absolute;
    top: -25px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 12px;
    font-weight: 600;
    color: var(--text-primary);
}

.trend-labels {
    display: flex;
    gap: 15px;
    padding: 10px 20px 0;
}

.trend-label {
    width: 20px;
    text-align: center;
    font-size: 12px;
    color: var(--text-secondary);
}

.alerts-list {
    display: flex;
    flex-direction: column;
    gap: 15px;
}

.alert-item {
    display: flex;
    gap: 12px;
    padding: 15px;
    border-radius: 8px;
    border-left: 4px solid;
}

.alert-item.high {
    background: #fee;
    border-left-color: #dc3545;
}

.alert-item.medium {
    background: #fff3cd;
    border-left-color: #ffc107;
}

.alert-item.low {
    background: #d4edda;
    border-left-color: #28a745;
}

.alert-icon {
    font-size: 20px;
}

.alert-content strong {
    display: block;
    margin-bottom: 5px;
    color: var(--text-primary);
}

.alert-content p {
    margin: 0;
    color: var(--text-secondary);
    font-size: 14px;
}

.no-alerts {
    text-align: center;
    color: var(--text-secondary);
    font-style: italic;
}

/* Report Display */
.report-display {
    background: var(--bg-card);
    border-radius: 12px;
    padding: 30px;
    margin-bottom: 30px;
    box-shadow: 0 2px 10px var(--shadow);
}

.report-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30px;
    padding-bottom: 20px;
    border-bottom: 2px solid var(--border-color);
}

.report-actions {
    display: flex;
    gap: 15px;
}

.report-content {
    line-height: 1.8;
}

.report-header-info h1 {
    color: var(--text-primary);
    margin-bottom: 10px;
}

.report-date,
.report-provider {
    color: var(--text-secondary);
    margin-bottom: 5px;
}

.report-section {
    margin-bottom: 30px;
}

.report-section h2 {
    color: var(--accent-color);
    margin-bottom: 15px;
    padding-bottom: 8px;
    border-bottom: 1px solid var(--border-color);
}

.section-content {
    color: var(--text-primary);
}

/* Report Templates */
.report-templates {
    background: var(--bg-card);
    border-radius: 12px;
    padding: 25px;
    box-shadow: 0 2px 10px var(--shadow);
}

.report-templates h3 {
    margin-bottom: 20px;
    color: var(--text-primary);
}

.templates-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 20px;
}

.template-card {
    padding: 20px;
    background: var(--bg-primary);
    border: 1px solid var(--border-color);
    border-radius: 12px;
    cursor: pointer;
    transition: all 0.3s ease;
    text-align: center;
}

.template-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 15px var(--shadow-hover);
}

.template-icon {
    font-size: 32px;
    margin-bottom: 15px;
}

.template-card h4 {
    margin-bottom: 10px;
    color: var(--text-primary);
}

.template-card p {
    color: var(--text-secondary);
    font-size: 14px;
    margin: 0;
}

/* Progress Modal */
.progress-container {
    text-align: center;
    padding: 20px;
}

.progress-bar {
    width: 100%;
    height: 8px;
    background: var(--border-color);
    border-radius: 4px;
    overflow: hidden;
    margin-bottom: 15px;
}

.progress-fill {
    height: 100%;
    background: var(--accent-color);
    border-radius: 4px;
    transition: width 0.3s ease;
    width: 0%;
}

/* Share Modal */
.share-options {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
    gap: 15px;
}

.share-option {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 10px;
    padding: 20px;
    background: var(--bg-primary);
    border: 1px solid var(--border-color);
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.3s ease;
}

.share-option:hover {
    background: var(--accent-color);
    color: white;
    transform: translateY(-2px);
}

.share-icon {
    font-size: 24px;
}

/* Patient Dashboard Styles */
.patient-dashboard-page {
    max-width: 1400px;
    margin: 0 auto;
    padding: 20px;
}

.patient-header {
    background: var(--bg-card);
    border-radius: 12px;
    padding: 30px;
    margin-bottom: 30px;
    box-shadow: 0 2px 10px var(--shadow);
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 20px;
}

.patient-info {
    display: flex;
    align-items: center;
    gap: 20px;
}

.patient-details h1 {
    font-size: 28px;
    margin-bottom: 8px;
    color: var(--text-primary);
}

.patient-meta {
    color: var(--text-secondary);
    margin-bottom: 15px;
}

.patient-status {
    display: flex;
    gap: 10px;
    align-items: center;
}

.patient-actions {
    display: flex;
    gap: 15px;
    flex-wrap: wrap;
}

.patient-stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 20px;
    margin-bottom: 30px;
}

/* Patient Tabs */
.patient-tabs {
    background: var(--bg-card);
    border-radius: 12px;
    box-shadow: 0 2px 10px var(--shadow);
    overflow: hidden;
}

.tab-nav {
    display: flex;
    background: var(--bg-primary);
    border-bottom: 1px solid var(--border-color);
}

.tab-button {
    flex: 1;
    padding: 15px 20px;
    background: none;
    border: none;
    cursor: pointer;
    color: var(--text-secondary);
    font-weight: 500;
    transition: all 0.3s ease;
    border-bottom: 3px solid transparent;
}

.tab-button:hover {
    background: var(--bg-card);
    color: var(--text-primary);
}

.tab-button.active {
    background: var(--bg-card);
    color: var(--accent-color);
    border-bottom-color: var(--accent-color);
}

.tab-content {
    display: none;
    padding: 30px;
}

.tab-content.active {
    display: block;
}

/* Overview Tab */
.overview-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 25px;
}

.overview-section {
    background: var(--bg-primary);
    border-radius: 8px;
    padding: 20px;
    border: 1px solid var(--border-color);
}

.overview-section h3 {
    margin-bottom: 15px;
    color: var(--accent-color);
    font-size: 18px;
}

.recent-assessments-list {
    display: flex;
    flex-direction: column;
    gap: 12px;
    margin-bottom: 15px;
}

.recent-assessment-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 12px;
    background: var(--bg-card);
    border-radius: 6px;
    cursor: pointer;
    transition: all 0.3s ease;
    border: 1px solid var(--border-color);
}

.recent-assessment-item:hover {
    transform: translateY(-1px);
    box-shadow: 0 2px 8px var(--shadow);
}

.assessment-date {
    min-width: 100px;
}

.assessment-date strong {
    display: block;
    color: var(--text-primary);
}

.assessment-date small {
    color: var(--text-secondary);
    font-size: 12px;
}

.assessment-symptoms {
    flex: 1;
    text-align: right;
}

.assessment-symptoms small {
    color: var(--text-secondary);
}

.risk-factors-list {
    display: flex;
    flex-direction: column;
    gap: 12px;
}

.risk-factor-item {
    display: flex;
    gap: 12px;
    padding: 12px;
    background: var(--bg-card);
    border-radius: 6px;
    border-left: 3px solid;
}

.risk-factor-item.high {
    border-left-color: #dc3545;
    background: #fee;
}

.risk-factor-item.medium {
    border-left-color: #ffc107;
    background: #fff3cd;
}

.risk-factor-item.low {
    border-left-color: #28a745;
    background: #d4edda;
}

.factor-icon {
    font-size: 20px;
}

.factor-content strong {
    display: block;
    margin-bottom: 5px;
    color: var(--text-primary);
}

.factor-content p {
    margin: 0;
    color: var(--text-secondary);
    font-size: 14px;
}

.care-notes {
    display: flex;
    flex-direction: column;
    gap: 10px;
}

.care-notes textarea {
    min-height: 100px;
    resize: vertical;
    padding: 12px;
    border: 1px solid var(--border-color);
    border-radius: 6px;
    background: var(--bg-card);
    color: var(--text-primary);
    font-family: inherit;
}

.care-notes button.success {
    background: var(--success-color);
    border-color: var(--success-color);
    color: white;
}

.patient-alerts {
    display: flex;
    flex-direction: column;
    gap: 12px;
}

/* Assessments Tab */
.assessments-section {
    max-width: 100%;
}

.assessments-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 25px;
    padding-bottom: 15px;
    border-bottom: 1px solid var(--border-color);
}

.assessment-filters {
    display: flex;
    gap: 15px;
}

.assessments-timeline {
    display: flex;
    flex-direction: column;
    gap: 20px;
}

.timeline-item {
    display: flex;
    gap: 20px;
    cursor: pointer;
    transition: all 0.3s ease;
    padding: 15px;
    border-radius: 8px;
}

.timeline-item:hover {
    background: var(--bg-primary);
}

.timeline-marker {
    width: 16px;
    height: 16px;
    border-radius: 50%;
    margin-top: 5px;
    flex-shrink: 0;
}

.timeline-marker.risk-high {
    background: #dc3545;
}

.timeline-marker.risk-moderate {
    background: #ffc107;
}

.timeline-marker.risk-low {
    background: #28a745;
}

.timeline-marker.risk-unknown {
    background: #6c757d;
}

.timeline-content {
    flex: 1;
}

.timeline-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 10px;
}

.timeline-date strong {
    color: var(--text-primary);
    margin-right: 10px;
}

.timeline-date span {
    color: var(--text-secondary);
    font-size: 14px;
}

.timeline-body p {
    margin-bottom: 8px;
    color: var(--text-secondary);
    font-size: 14px;
}

.timeline-body p:last-child {
    margin-bottom: 0;
}

/* Medical Info Tab */
.medical-info-grid {
    display: flex;
    flex-direction: column;
    gap: 30px;
}

.medical-section {
    background: var(--bg-primary);
    border-radius: 8px;
    padding: 20px;
    border: 1px solid var(--border-color);
}

.medical-section h4 {
    margin-bottom: 15px;
    color: var(--accent-color);
    font-size: 18px;
}

.info-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 15px;
}

.info-item {
    display: flex;
    flex-direction: column;
    gap: 5px;
    padding: 12px;
    background: var(--bg-card);
    border-radius: 6px;
}

.info-item.full-width {
    grid-column: 1 / -1;
}

.info-item label {
    font-weight: 600;
    color: var(--text-secondary);
    font-size: 14px;
}

.info-item span {
    color: var(--text-primary);
    font-weight: 500;
}

/* Trends Tab */
.trends-section {
    display: flex;
    flex-direction: column;
    gap: 30px;
}

.trends-section h3,
.trends-section h4 {
    color: var(--accent-color);
    margin-bottom: 15px;
}

.trend-chart-container,
.symptom-patterns,
.trend-insights {
    background: var(--bg-primary);
    border-radius: 8px;
    padding: 20px;
    border: 1px solid var(--border-color);
}

.risk-trend-chart,
.symptom-patterns-chart {
    height: 200px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.trend-line-chart {
    display: flex;
    align-items: end;
    gap: 20px;
    height: 150px;
    padding: 20px;
}

.trend-point-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 10px;
}

.trend-point {
    width: 15px;
    border-radius: 7px 7px 0 0;
    min-height: 10px;
    transition: height 0.5s ease;
}

.trend-point.risk-high {
    background: linear-gradient(to top, #dc3545, #ff6b7a);
}

.trend-point.risk-moderate {
    background: linear-gradient(to top, #ffc107, #ffcd39);
}

.trend-point.risk-low {
    background: linear-gradient(to top, #28a745, #5cbf2a);
}

.trend-label {
    font-size: 12px;
    color: var(--text-secondary);
    writing-mode: vertical-rl;
    text-orientation: mixed;
}

.symptom-bars {
    display: flex;
    flex-direction: column;
    gap: 15px;
    padding: 20px;
}

.symptom-bar {
    display: flex;
    align-items: center;
    gap: 15px;
}

.insights-list {
    display: flex;
    flex-direction: column;
    gap: 15px;
}

.insight-item {
    display: flex;
    gap: 15px;
    padding: 15px;
    background: var(--bg-card);
    border-radius: 8px;
    border-left: 3px solid var(--accent-color);
}

.insight-icon {
    font-size: 24px;
}

.insight-content strong {
    display: block;
    margin-bottom: 5px;
    color: var(--text-primary);
}

.insight-content p {
    margin: 0;
    color: var(--text-secondary);
}

/* Responsive Design for Healthcare Features */
@media (max-width: 768px) {
    .patients-controls,
    .assessments-controls {
        flex-direction: column;
        align-items: stretch;
    }
    
    .search-bar {
        min-width: auto;
    }
    
    .filter-controls {
        flex-wrap: wrap;
    }
    
    .patients-grid {
        grid-template-columns: 1fr;
    }
    
    .patient-header {
        flex-direction: column;
        text-align: center;
    }
    
    .patient-info {
        flex-direction: column;
        text-align: center;
    }
    
    .patient-actions {
        justify-content: center;
    }
    
    .tab-nav {
        flex-wrap: wrap;
    }
    
    .tab-button {
        flex: 1 1 auto;
        min-width: 120px;
    }
    
    .overview-grid {
        grid-template-columns: 1fr;
    }
    
    .info-grid {
        grid-template-columns: 1fr;
    }
    
    .report-controls {
        grid-template-columns: 1fr;
    }
    
    .analytics-grid {
        grid-template-columns: 1fr;
    }
    
    .templates-grid {
        grid-template-columns: 1fr;
    }
    
    .control-actions {
        flex-direction: column;
    }
    
    .report-header {
        flex-direction: column;
        align-items: stretch;
        gap: 15px;
    }
    
    .report-actions {
        justify-content: center;
    }
    
    .modal-content {
        width: 95%;
        margin: 20px;
    }
    
    .modal-footer {
        flex-direction: column;
        gap: 10px;
    }
    
    .patient-actions {
        flex-direction: column;
    }
    
    .timeline-item {
        flex-direction: column;
        gap: 10px;
    }
    
    .timeline-header {
        flex-direction: column;
        align-items: flex-start;
        gap: 10px;
    }
}

@media (max-width: 480px) {
    .patient-dashboard-page,
    .patients-page,
    .assessments-page,
    .reports-page {
        padding: 10px;
    }
    
    .stat-card {
        flex-direction: column;
        text-align: center;
    }
    
    .patient-card-footer {
        flex-direction: column;
        gap: 8px;
    }
    
    .share-options {
        grid-template-columns: 1fr;
    }
    
    .trend-line-chart {
        flex-wrap: wrap;
        height: auto;
        gap: 10px;
    }
}